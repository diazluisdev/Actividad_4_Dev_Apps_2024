<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    android:orientation="vertical"
    tools:context=".Fuentes.GestionarFuentes"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageRegistrar"
        android:layout_width="330dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/logo_cipa" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99F8E9E9"
            android:gravity="clip_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/idFuente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="ID de la fuente"
                android:inputType="number"
                android:padding="16dp" />

            <EditText
                android:id="@+id/fechaIngreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de Recepción"
                android:inputType="none"
                android:focusable="false"
                android:padding="16dp" />

            <EditText
                android:id="@+id/nombreFuente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="Nombre de la fuente"
                android:inputType="numberDecimal"
                android:padding="16dp" />

            <EditText
                android:id="@+id/descripcionFuente"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="18dp"
                android:hint="Descripción de la fuente"
                android:inputType="text"
                android:padding="16dp" />

            <Button
                android:id="@+id/botonGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Guardar" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/botonBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/botonEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/botonEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>